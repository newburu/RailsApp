<h2 class="page-title">内容を確認してください</h2>
<div class="form-container">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <p class="labal-class"><%= f.label :name, '名前' %><%= f.text_field :name, value: @user.name, readonly: true %></p>
    <p class="label-class"><%= f.label :email %><%= f.text_field :email, value: @user.email, readonly: true %></p>
    <p><%= f.label :password %><%= @password %></p>
    <p><%= f.label :gender %><%= f.text_field :gender, value: @user.gender, readonly: true %></p>
    <p><%= f.label :weight %><%= f.text_field :weight, value: @user.weight, readonly: true %></p>
    <p><%= f.label :height %><%= f.text_field :height, value: @user.height, readonly: true %></p>
    <p><%= f.laebl :exercise %><%= f.text_field :exercise, value: @user.exercise, readonly: true %></p>
    <div class="btn-container">
        <%= f.submit "修正する", name: :back, class: "back-btn"%>
        <%= f.submit "登録する", class: "confirm-btn"%>
    </div>
    <% end %>
</div>